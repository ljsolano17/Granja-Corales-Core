@model SolutionFrontEnd.Models.Categorias

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Detalles Categorías";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Categorías</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdCategoria">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
</div>
