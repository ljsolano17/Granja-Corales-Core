@model IEnumerable<SolutionFrontEnd.Models.Solicitudes>

@{
    ViewData["Title"] = "Mis Solicitudes";
}

<div class="mdk-drawer-layout js-mdk-drawer-layout"
     data-push
     data-responsive-width="992px">
    <div class="mdk-drawer-layout__content page-content">

        <div class="page-section bg-primary">


            @if (ViewBag.Succes != null)
            {
                <div class="alert alert-primary" role="alert">
                    <div class="d-flex flex-wrap align-items-start">
                        <div class="mr-8pt">
                            <i class="material-icons">access_time</i>
                        </div>
                        <div class="flex" style="min-width: 180px">
                            <small class="text-black-100">
                                @ViewBag.Succes
                            </small>
                        </div>
                    </div>
                </div>
            }
            else if (ViewBag.Danger != null)
            {
                <div class="alert alert-accent" role="alert">
                    <div class="d-flex flex-wrap align-items-start">
                        <div class="mr-8pt">
                            <i class="material-icons">access_time</i>
                        </div>
                        <div class="flex" style="min-width: 180px">
                            <small class="text-black-100">
                                @ViewBag.Danger
                            </small>
                        </div>
                    </div>
                </div>
            }


            <div class="container page__container d-flex flex-column flex-md-row align-items-center text-center text-md-left">
                <img src="../../public/images/illustration/teacher/128/white.svg"
                     width="104"
                     class="mr-md-32pt mb-32pt mb-md-0"
                     alt="instructor">
                <div class="flex mb-32pt mb-md-0">
                    <h2 class="text-white mb-0">Mis Solicitudes</h2>
                </div>

            </div>
        </div>

        <div class="page-section">
            <div class="container page__container">

                <div class="row">
                    <div class="col-lg-12">

                        <div class="page-separator">
                            <div class="page-separator__text">Mis Solicitudes</div>
                        </div>

                        @if (Model.Count() > 0)
                        {
                            <div class="card table-responsive">
                                <table class="table table-flush table-nowrap">
                                    <thead>
                                        <tr>
                                            <th>Fecha de realización</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.FecCreacion</td>
                                                <td>@item.EstadoAprobacion</td>                                               
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                    <h4>Todavía no has realizado solicitudes</h4>
                        }


                    </div>
                </div>

            </div>
        </div>
    </div>
</div>