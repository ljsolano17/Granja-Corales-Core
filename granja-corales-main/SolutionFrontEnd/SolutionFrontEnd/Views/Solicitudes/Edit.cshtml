@model SolutionFrontEnd.Models.Solicitudes

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Editar solicitud";
}

<h1>@ViewData["Title"]</h1>

<h4>Solicitudes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSolicitud" />
            <div class="form-group">
                <label asp-for="FecCreacion" class="control-label"></label>
                <input asp-for="FecCreacion" class="form-control" />
                <span asp-validation-for="FecCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoAprobacion" class="control-label"></label>
                <input asp-for="EstadoAprobacion" class="form-control" />
                <span asp-validation-for="EstadoAprobacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <input asp-for="IdUsuario" class="form-control" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
